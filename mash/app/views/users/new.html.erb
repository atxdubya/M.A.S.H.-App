<%= form_for :user, url: users_path do |f| %>
 
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited
        this user from being saved:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :title %><br>
    <%= f.string :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.string :text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>
 
<%= link_to 'Back', users_path %>


<%= form_for @photo do |f| %>
  <%= f.string :first_name, :placeholder => "First Name" %>
  <%= f.string :last_name, :placeholder => "Last Name" %>
  <%= f.string :password, :placeholder => "Password" %>
  <%= f.submit "Submit" %>
<% end %>

