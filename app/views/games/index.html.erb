<%= form_tag do %>
    <div class="container">
        <div class="row">
            <div class="choice car col-xs-3">
                <input class="categories" type="text" value="CARS:" readonly>
                <% @cars.each do |car| %>
                    <input name="cars[]" class="options" type="text" value="<%= car.make %>" placeholder="1">
                <% end %>
            </div>
            <div class="choice col-xs-6">
                <div class="row">
                    <span class="col-xs-3"></span>
                    <div class="spouse col-xs-6">
                        <input class="categories" type="text" value="SPOUSE:" readonly>
                        <% @spouses.each do |spouse| %>
                            <input name="spouses[]" class="options" type="text" value="<%= spouse.name %>" placeholder="1">
                        <% end %>
                    </div>
                    <span class="col-xs-3"></span>
                </div>
            </div>
            <div class="choice house col-xs-3">
                <input class="categories" type="text" value="LIVING:" readonly>
                <% @houses.each do |house| %>
                    <input name="houses[]" class="options" type="text" value="<%= house.style %>" placeholder="1">
                <% end %>
            </div>
        </div>
        <!-- button to click to get your number goes here-->
        <!-- <div class="row">
            <span class="col-xs-2"></span>
            <button class="pencil col-xs-8" type="button"><%= image_tag("pencil2.png") %></button>
            <span class="col-xs-2"></span>
        </div> -->
        <div class="row outputbar">
            <span class="col-xs-2"></span>
            <div class="col-xs-8 input-group">
              <span class="input-group-btn">
                  <input class="mashbtn btn btn-default" type="submit" value='mash it'>
              </span>
              <input type="text" class="form-control" id="results" placeholder="Your life..." value="<%= @plight %>"valuereadonly>
            </div>
            <span class="col-xs-2"></span>
        </div>
        <p><%= @gameboard %></p>
    </div>
<% end %>
